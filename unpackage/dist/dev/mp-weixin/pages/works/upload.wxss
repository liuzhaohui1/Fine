
page {
	width: 100%;
	height: 100%;
	background-color: rgb(247, 247, 247);
}
.text {
	width: 90%;
	height: 320rpx;
	background-color: white;
	border-radius: 20rpx;
	margin: 0 auto;
	margin-top: 20rpx;
	padding: 20rpx;
}
.picture {
	width: 90%;
	height: 100%;
	background-color: white;
	padding: 20rpx;
	margin: auto;
	margin-top: 30rpx;
	border-radius: 20rpx;
	padding-bottom: 30rpx;
}
.picture>text:nth-child(1) {
	display: block;
	font-size: 30rpx;
	font-weight: 550;
	margin-bottom: 30rpx;
}
.img {
	width: 204rpx;
	height: 204rpx;
	border-radius: 10rpx;
	border: 1rpx dashed gray;
}
textarea {
	width: 100%;
	padding: 10rpx;
}
button {
	width: 88%;
	margin-top: 60rpx;
	background-color: rgb(205, 166, 127);
	color: white;
	font-size: 32rpx;
	border-radius: 50rpx;
}

